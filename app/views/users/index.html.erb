<h3>Listing users</h3>
 
<table class="table table-striped table-bordered table-condensed">
<thead>
  <tr>
    <th>Username</th>
    <th>First Name</th>
	<th>Last Name</th>
	<th>Edit</th>
	<th>Exterminate</th>
  </tr>
 </thead>
  <% @users.each do |user| %>
    <tr>
	<td><%= user.username %></td>
      <td><%= user.fname %></td>
      <td><%= user.lname %></td>
	  <!--td>< %= link_to user.username, user % ></td-->
	  <td><%= link_to "edit", edit_user_path(user.id) %></td>
	  <td><%= link_to "delete", user, method: :delete, :confirm => 'Are you sure?' %></td>
	  
    </tr>
  <% end %>
</table>